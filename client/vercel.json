{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "ignoreCommand": "git diff --quiet HEAD^ HEAD -- src/ public/ index.html package.json vite.config.js vercel.json",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://budget-pilot-backend.onrender.com/api/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}
